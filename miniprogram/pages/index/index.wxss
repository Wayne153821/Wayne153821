.head{
    height: 400rpx;
    background-color: #0ff;
}

.login_btn{
    margin-top: 150rpx;
    background: #e85;
    color: #0ff;
}

.end{
    display: flex;
    flex-direction: row;
}

.login_out{
    margin-top: 20rpx;
    font-size: 33rpx;
    color: gray;
    border-bottom: 1rpx solid gray;
}

.clear{
    position: absolute;
    right: 15rpx;
    font-size: 33rpx;
    color: red;
    margin-top: 20rpx;
    border-bottom: 1rpx solid red;
}

.user {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.touxiang {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 50rpx;
    margin-bottom: 20rpx;
}

.item{
    display: flex;
    background-color: white;
    padding: 25rpx;
    align-items: center;
    border-bottom: 3rpx solid #0ff;
}

.right_arrow {
    border: solid #0ff;
    border-width: 0 3px 3px 0;
    padding: 3px;
    position: absolute;
    right: 15px;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
}

.button{
    width: 100%;
    background: white;
    border: none;
    text-align: left;
    padding: 0px;
    margin: 0px;
    line-height: 1.3;
    font-size: 16px;
}

.button::after{
    border: none;
    border-radius: 0;
}

